<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DisplayNoteActivity">


    <TextView
        android:id="@+id/notedisplay_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:background= "#A7A7A7"
        android:fontFamily="@font/lobster_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notedisplay_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/topdisplay_texview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ED000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/notedisplay_textview"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/bottomdisplay_texview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ED000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notedisplay_textview"

        />

</androidx.constraintlayout.widget.ConstraintLayout>